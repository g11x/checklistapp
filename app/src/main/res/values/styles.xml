<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="AppCardViewStyle" parent="CardView">
    <item name="cardCornerRadius">0dp</item>
    <item name="android:layout_marginLeft">@dimen/grid_padding</item>
    <item name="android:layout_marginRight">@dimen/grid_padding</item>
    <item name="android:layout_marginTop">@dimen/grid_padding</item>
    <item name="contentPaddingTop">5dp</item>
    <item name="contentPaddingBottom">5dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:orientation">vertical</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
  </style>

  <style name="AppCardViewTitleTextStyle" parent="TextAppearance.AppCompat">
    <item name="android:padding">@dimen/title_padding</item>
    <item name="android:textSize">@dimen/text_size_title</item>
    <item name="android:textColor">@color/primary</item>
  </style>

  <style name="AppNotificationTitleTextStyle" parent="TextAppearance.AppCompat">
    <item name="android:paddingLeft">@dimen/title_padding</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:textSize">@dimen/text_size_title</item>
  </style>

  <style name="AppNotificationBodyTextStyle" parent="TextAppearance.AppCompat">
    <item name="android:paddingLeft">@dimen/title_padding</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:lineSpacingMultiplier">1.4</item>
    <item name="android:textSize">@dimen/text_size_description</item>
  </style>

  <style name="AppDescriptionTextStyle" parent="TextAppearance.AppCompat">
    <item name="android:ellipsize">end</item>
    <item name="android:textSize">@dimen/text_size_description</item>
    <item name="android:layout_weight">1</item>
    <item name="android:lineSpacingMultiplier">1.4</item>
  </style>

</resources>
